<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns='http://www.springframework.org/schema/beans'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation='
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd'>
	
	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
	    <property name="serviceName" value="GISCoreRemoteService"/>
	    <property name="service" ref="remoteStreamFactory"/>
	    <property name="serviceInterface" value="org.mitre.giscore.IRemoteGISService"/>
	    <!-- defaults to 1099 -->
	    <property name="registryPort" value="1199"/>
	</bean>

	<bean id="remoteStreamFactory" 
		class="org.mitre.giscore.impl.RemoteGISService" />
</beans>