<ivysettings>
	<!-- Create a ivy.properties file in your home dir and put a line in with your mapsrv user and passwd -->
	<properties file="${user.home}/ivy.properties" />
	<property name="repository.dir" value="${user.home}/.ivy2"/>
	<settings defaultResolver="chained" />
	<credentials host="mapsrv" username="${mapsrv-user}" passwd="${mapsrv-passwd}" />
	<namespaces>
    	<namespace name="m2">
			<rule> 
	    		<fromsystem>
		        	<src org="servletapi" />
        			<dest org="javax.servlet"/>
		    	</fromsystem>
			    <tosystem>
    		    	<src org="javax.servlet" />
	    		    <dest org="servletapi" />
		    	</tosystem>
			</rule>
			<rule> 
	    		<fromsystem>
		        	<src org="com.sun.xml" />
        			<dest org="javax.xml" />
		    	</fromsystem>
			    <tosystem>
    		    	<src org="javax.xml" />
	    		    <dest org="com.sun.xml" />
		    	</tosystem>
			</rule>			
    	</namespace> 
	</namespaces>
	<resolvers>
		<chain name="chained" checkmodified="true" changingPattern=".*">
			<filesystem name="libraries" checkmodified="true" changingPattern=".*">
				<ivy
					pattern="${repository.dir}/[organisation](-[module])/ivy-[revision].xml" />
				<artifact
					pattern="${repository.dir}/[organisation](-[module])/[artifact]-[revision](-[type]).[ext]" />
			</filesystem>
			<ibiblio name="mapsrv" namespace="m2" checkconsistency="false"
				root="http://mapsrv/artifactory/repo/" m2compatible="true" />			
		</chain>
		<!--  <ssh name="ssh" host="mapsrv" >
			<artifact pattern="/data/m2/repo-local/org/mitre/itf/[module]/[revision]/[artifact]-[revision].[ext]" />
		</ssh>  -->		
		<ibiblio name="mapsrv-deploy" namespace="m2" 
			root="http://mapsrv/artifactory/libs-releases-local" m2compatible="true" />
	</resolvers>
</ivysettings>
